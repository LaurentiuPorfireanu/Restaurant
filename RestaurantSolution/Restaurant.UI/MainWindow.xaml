<UserControl x:Class="Restaurant.UI.Views.MeniuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Restaurant.ViewModels.Modules">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de categorii -->
        <ListBox
      ItemsSource="{Binding Categorii}"
      SelectedItem="{Binding SelectedCategory}"
      DisplayMemberPath="Name"
      Grid.Column="0" />

        <!-- Conținut: Preparaturi și Meniuri -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="{Binding SelectedCategory.Name}" FontSize="18" FontWeight="Bold" />
            <TextBlock Text="Preparate:" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <ItemsControl ItemsSource="{Binding Preparate}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Denumire}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="Meniuri:" Margin="0,20,0,5" FontWeight="SemiBold"/>
            <ItemsControl ItemsSource="{Binding Meniuri}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Denumire}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
