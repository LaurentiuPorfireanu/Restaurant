<UserControl x:Class="Restaurant.UI.Views.Order.MyOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="MyOrdersRoot"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titlu și informații generale -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Comenzile Mele" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Vizualizează și gestionează comenzile tale" 
                       FontSize="14" 
                       Opacity="0.7"/>
        </StackPanel>

        <!-- Opțiuni și filtre -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">
            <ToggleButton Content="Toate comenzile" 
                          IsChecked="{Binding IsAllOrdersSelected, Mode=TwoWay}"
                          Padding="15,8" 
                          Margin="0,0,10,0"/>
            <ToggleButton Content="Comenzi active" 
                          IsChecked="{Binding IsActiveOrdersSelected, Mode=TwoWay}"
                          Padding="15,8"/>
            <Button Content="Comandă nouă" 
                    Command="{Binding NewOrderCommand}"
                    Padding="15,8" 
                    Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Vizualizare listă comenzi -->
        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header tabel -->
                <Border Grid.Row="0" 
                        Background="#F5F5F5" 
                        BorderThickness="0,0,0,1" 
                        BorderBrush="#E0E0E0">
                    <Grid Margin="15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Data comenzii" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="1" 
                                  Text="Cod comandă" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="2" 
                                  Text="Cost total" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="3" 
                                  Text="Stare" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="4" 
                                  Text="Acțiuni" 
                                  FontWeight="Medium"/>
                    </Grid>
                </Border>

                <!-- Lista de comenzi -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Orders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander>
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="130"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding OrderDateFormatted}" 
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding OrderCode}" 
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding TotalCostFormatted}" 
                                                      FontWeight="SemiBold" 
                                                      VerticalAlignment="Center"/>
                                            <Border Grid.Column="3" 
                                                    CornerRadius="3" 
                                                    Padding="5,2" 
                                                    Margin="0,0,10,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding StatusBackground}" />
                                                </Border.Background>
                                                <TextBlock Text="{Binding StatusText}" 
                                                          Foreground="White" 
                                                          FontSize="12"/>
                                            </Border>

                                            <!-- Buton anulare comandă (doar pentru comenzi active) -->
                                            <Button Grid.Column="4" 
                                                    Content="Anulează" 
                                                    Command="{Binding DataContext.CancelOrderCommand, ElementName=MyOrdersRoot}"
                                                    CommandParameter="{Binding OrderID}"
                                                    Padding="10,5"
                                                    VerticalAlignment="Center">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CanCancel}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        
                                        
                                        
                                        </Grid>
                                    </Expander.Header>

                                    <!-- Detalii comandă -->
                                    <Border Padding="15" Background="#F9F9F9">
                                        <StackPanel>
                                            <!-- Informații generale -->
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                                          Text="Livrare estimată:" 
                                                          FontWeight="Medium"
                                                          Margin="0,0,10,5"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                                          Text="{Binding EstimatedDeliveryFormatted}"
                                                          Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                                          Text="Adresă livrare:" 
                                                          FontWeight="Medium"
                                                          Margin="0,0,10,5"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                                          Text="{Binding DeliveryAddress}"
                                                          Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                                          Text="Cost transport:" 
                                                          FontWeight="Medium"
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                                          Text="{Binding DeliveryCostFormatted}"/>
                                            </Grid>

                                            <!-- Lista de produse -->
                                            <TextBlock Text="Produse comandate:" 
                                                      FontWeight="SemiBold" 
                                                      Margin="0,0,0,5"/>

                                            <!-- Preparate -->
                                            <ItemsControl ItemsSource="{Binding OrderItems}" 
                                                         Margin="0,0,0,10">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" 
                                                                     Text="{Binding Quantity, StringFormat='{}{0}x'}" 
                                                                     Margin="0,0,10,0"/>
                                                            <TextBlock Grid.Column="1" 
                                                                     Text="{Binding Name}"/>
                                                            <TextBlock Grid.Column="2" 
                                                                     Text="{Binding UnitPriceFormatted}" 
                                                                     Margin="10,0"/>
                                                            <TextBlock Grid.Column="3" 
                                                                     Text="{Binding TotalPriceFormatted}" 
                                                                     FontWeight="SemiBold"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Sumarul comenzii -->
                                            <Grid Margin="0,10,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Grid.ColumnSpan="2" 
                                                        BorderBrush="#E0E0E0" 
                                                        BorderThickness="0,1,0,0" 
                                                        Margin="0,0,0,10"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                                          Text="Cost produse:"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,15,5"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                                          Text="{Binding ItemsCostFormatted}"
                                                          Margin="0,0,0,5"/>

                                                <!-- Folosim Style.Triggers pentru a controla vizibilitatea -->
                                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                                          Text="Reducere:"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,15,10">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                                          Text="{Binding DiscountFormatted}"
                                                          Foreground="#D32F2F"
                                                          Margin="0,0,0,10">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                                          Text="Total de plată:"
                                                          FontWeight="SemiBold"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,15,0"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                                          Text="{Binding TotalCostFormatted}"
                                                          FontWeight="SemiBold"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Indicator de încărcare - fixed to not appear on startup -->
                <Grid Grid.Row="1" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Rectangle Fill="#80FFFFFF" />
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,10"/>
                        <TextBlock Text="Se încarcă..." HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Mesaj când nu există comenzi -->
                <Grid Grid.Row="1" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasNoOrders}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Nu ai nicio comandă" 
                                  FontSize="16" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Încearcă să faci o comandă nouă" 
                                  Opacity="0.7" 
                                  HorizontalAlignment="Center"/>
                        <Button Content="Comandă nouă" 
                                Command="{Binding NewOrderCommand}"
                                Padding="15,8" 
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Formular pentru adăugare comandă nouă - ACUM ASCUNS LA ÎNCĂRCARE -->
        <Grid Grid.Row="2" 
              Visibility="Collapsed">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding OrderManagement.IsAddMode}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titlu și informații generale -->
            <TextBlock Grid.Row="0" 
                       Text="Comandă nouă" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,15"/>

            <!-- Conținutul principal -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Lista de categorii și produse disponibile -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Produse disponibile" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CategoriesControl" ItemsSource="{Binding OrderManagement.Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding Name}" 
                                              Margin="0,0,0,5">
                                        <StackPanel>
                                            <!-- Preparate din categorie -->
                                            <ItemsControl ItemsSource="{Binding Preparate}" 
                                                          Margin="10,5"
                                                          x:Name="PreparateList"
                                                          Tag="{Binding DataContext.OrderManagement, ElementName=MyOrdersRoot}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,5">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" 
                                                                       Text="{Binding Name}" 
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="1" 
                                                                       Text="{Binding PriceFormatted}" 
                                                                       Margin="10,0" 
                                                                       FontWeight="SemiBold" 
                                                                       VerticalAlignment="Center"/>
                                                            <Button Grid.Column="2"
                                                                    Content="Adaugă" 
                                                                    Command="{Binding Tag.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                                    CommandParameter="{Binding}" 
                                                                    Padding="8,3"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Meniuri din categorie -->
                                            <ItemsControl ItemsSource="{Binding Menus}" 
                                                          Margin="10,5"
                                                          x:Name="MenusList"
                                                          Tag="{Binding DataContext.OrderManagement, ElementName=MyOrdersRoot}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,5">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" 
                                                                       Text="{Binding Name}" 
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="1" 
                                                                       Text="{Binding PriceFormatted}" 
                                                                       Margin="10,0" 
                                                                       FontWeight="SemiBold" 
                                                                       VerticalAlignment="Center"/>

                                                            <Button Grid.Column="2"
                                                                    Content="Adaugă" 
                                                                    Command="{Binding Tag.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                                    CommandParameter="{Binding}" 
                                                                    Padding="8,3"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- Separator -->
                <GridSplitter Grid.Column="1" 
                              Width="3" 
                              Background="#E0E0E0" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Stretch" 
                              Margin="10,0"/>

                <!-- Coș de cumpărături și sumar -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Coșul meu" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <!-- Lista produselor din coș -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding OrderManagement.CartItems}" 
                                     Tag="{Binding OrderManagement}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Cantitate cu butoane +/- -->
                                            <StackPanel Grid.Column="0" 
                                                        Orientation="Horizontal" 
                                                        Margin="0,0,10,0">
                                                <Button Content="-" 
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=Tag.DecrementQuantityCommand}" 
                                                        CommandParameter="{Binding}" 
                                                        Width="25" 
                                                        Height="25"/>
                                                <TextBlock Text="{Binding Quantity}" 
                                                           VerticalAlignment="Center" 
                                                           HorizontalAlignment="Center" 
                                                           Width="30" 
                                                           TextAlignment="Center"/>
                                                <Button Content="+" 
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=Tag.IncrementQuantityCommand}" 
                                                        CommandParameter="{Binding}" 
                                                        Width="25" 
                                                        Height="25"/>
                                            </StackPanel>

                                            <!-- Nume produs -->
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Name}" 
                                                       VerticalAlignment="Center"/>

                                            <!-- Preț total -->
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding TotalPriceFormatted}" 
                                                       FontWeight="SemiBold" 
                                                       VerticalAlignment="Center" 
                                                       Margin="10,0"/>

                                            <!-- Buton ștergere -->
                                            <Button Grid.Column="3" 
                                                    Content="x" 
                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=Tag.RemoveFromCartCommand}" 
                                                    CommandParameter="{Binding}" 
                                                    Width="25" 
                                                    Height="25" 
                                                    Background="#FFE0E0" 
                                                    Foreground="#D32F2F" 
                                                    FontWeight="Bold"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Sumarul comenzii -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linie de separare -->
                        <Border Grid.Row="0" 
                                Grid.ColumnSpan="2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="0,1,0,0" 
                                Margin="0,0,0,10"/>

                        <!-- Subtotal -->
                        <TextBlock Grid.Row="1" 
                                   Grid.Column="0" 
                                   Text="Subtotal:" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" 
                                   Grid.Column="1" 
                                   Text="{Binding OrderManagement.SubtotalFormatted}" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,5"/>

                        <!-- Discount (dacă există) -->
                        <TextBlock Grid.Row="2" 
                                   Grid.Column="0" 
                                   Text="Discount:" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,10,5">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OrderManagement.HasDiscount}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Grid.Row="2" 
                                   Grid.Column="1" 
                                   Text="{Binding OrderManagement.DiscountFormatted}" 
                                   Foreground="#4CAF50" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,5">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OrderManagement.HasDiscount}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Cost livrare (dacă există) -->
                        <TextBlock Grid.Row="3" 
                                   Grid.Column="0" 
                                   Text="Cost livrare:" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,10,10">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OrderManagement.HasDeliveryCost}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Grid.Row="3" 
                                   Grid.Column="1" 
                                   Text="{Binding OrderManagement.DeliveryCostFormatted}" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,10">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OrderManagement.HasDeliveryCost}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <!-- Linie de separare -->
                        <Border Grid.Row="4" 
                                Grid.ColumnSpan="2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="0,1,0,0" 
                                Margin="0,0,0,10"/>

                        <!-- Total general -->
                        <TextBlock Grid.Row="5" 
                                   Grid.Column="0" 
                                   Text="Total comandă:" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="5" 
                                   Grid.Column="1" 
                                   Text="{Binding OrderManagement.TotalCostFormatted}" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,10"/>

                        <!-- Informații de livrare -->
                        <Grid Grid.Row="6" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Adresă de livrare:" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" 
                                     Text="{Binding OrderManagement.DeliveryAddress, UpdateSourceTrigger=PropertyChanged}" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     Height="60" 
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" 
                                       Text="{Binding OrderManagement.EstimatedDeliveryFormatted, StringFormat='Livrarea estimată: {0}'}" 
                                       Margin="0,0,0,0"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Butoane de acțiune -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,15,0,0">
                <Button Content="Anulează" 
                        Command="{Binding OrderManagement.CancelOrderCommand}" 
                        Padding="20,10" 
                        Margin="0,0,10,0"/>
                <Button Content="Plasează comanda" 
                        Command="{Binding OrderManagement.PlaceOrderCommand}" 
                        Padding="20,10" 
                        Background="#4CAF50" 
                        Foreground="White"/>
            </StackPanel>

            <!-- Indicator de încărcare -->
            <Grid Grid.Row="0" Grid.RowSpan="3" 
                  Visibility="Collapsed">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding OrderManagement.IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Rectangle Fill="#80FFFFFF"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,10"/>
                    <TextBlock Text="Se procesează..." HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>