<UserControl x:Class="Restaurant.UI.Views.Order.MyOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titlu și informații generale -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Comenzile Mele" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Vizualizează și gestionează comenzile tale" 
                       FontSize="14" 
                       Opacity="0.7"/>
        </StackPanel>

        <!-- Opțiuni și filtre -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">
            <ToggleButton Content="Toate comenzile" 
                          IsChecked="{Binding IsAllOrdersSelected, Mode=TwoWay}"
                          Padding="15,8" 
                          Margin="0,0,10,0"/>
            <ToggleButton Content="Comenzi active" 
                          IsChecked="{Binding IsActiveOrdersSelected, Mode=TwoWay}"
                          Padding="15,8"/>
            <Button Content="Comandă nouă" 
                    Command="{Binding NewOrderCommand}"
                    Padding="15,8" 
                    Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Lista de comenzi -->
        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header tabel -->
                <Border Grid.Row="0" 
                        Background="#F5F5F5" 
                        BorderThickness="0,0,0,1" 
                        BorderBrush="#E0E0E0">
                    <Grid Margin="15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Data comenzii" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="1" 
                                  Text="Cod comandă" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="2" 
                                  Text="Cost total" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="3" 
                                  Text="Stare" 
                                  FontWeight="Medium"/>
                        <TextBlock Grid.Column="4" 
                                  Text="Acțiuni" 
                                  FontWeight="Medium"/>
                    </Grid>
                </Border>

                <!-- Lista de comenzi -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Orders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander>
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="130"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding OrderDateFormatted}" 
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding OrderCode}" 
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding TotalCostFormatted}" 
                                                      FontWeight="SemiBold" 
                                                      VerticalAlignment="Center"/>
                                            <Border Grid.Column="3" 
                                                    CornerRadius="3" 
                                                    Padding="5,2" 
                                                    Margin="0,0,10,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding StatusBackground}" />
                                                </Border.Background>
                                                <TextBlock Text="{Binding StatusText}" 
                                                          Foreground="White" 
                                                          FontSize="12"/>
                                            </Border>

                                            <!-- Buton anulare comandă (doar pentru comenzi active) -->
                                            <Button Grid.Column="4" 
                                                    Content="Anulează" 
                                                    Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding OrderID}"
                                                    Padding="10,5"
                                                    VerticalAlignment="Center">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CanCancel}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Expander.Header>

                                    <!-- Detalii comandă -->
                                    <Border Padding="15" Background="#F9F9F9">
                                        <StackPanel>
                                            <!-- Informații generale -->
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                                          Text="Livrare estimată:" 
                                                          FontWeight="Medium"
                                                          Margin="0,0,10,5"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                                          Text="{Binding EstimatedDeliveryFormatted}"
                                                          Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                                          Text="Adresă livrare:" 
                                                          FontWeight="Medium"
                                                          Margin="0,0,10,5"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                                          Text="{Binding DeliveryAddress}"
                                                          Margin="0,0,0,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                                          Text="Cost transport:" 
                                                          FontWeight="Medium"
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                                          Text="{Binding DeliveryCostFormatted}"/>
                                            </Grid>

                                            <!-- Lista de produse -->
                                            <TextBlock Text="Produse comandate:" 
                                                      FontWeight="SemiBold" 
                                                      Margin="0,0,0,5"/>

                                            <!-- Preparate -->
                                            <ItemsControl ItemsSource="{Binding OrderItems}" 
                                                         Margin="0,0,0,10">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" 
                                                                     Text="{Binding Quantity, StringFormat='{}{0}x'}" 
                                                                     Margin="0,0,10,0"/>
                                                            <TextBlock Grid.Column="1" 
                                                                     Text="{Binding Name}"/>
                                                            <TextBlock Grid.Column="2" 
                                                                     Text="{Binding UnitPriceFormatted}" 
                                                                     Margin="10,0"/>
                                                            <TextBlock Grid.Column="3" 
                                                                     Text="{Binding TotalPriceFormatted}" 
                                                                     FontWeight="SemiBold"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Sumarul comenzii -->
                                            <Grid Margin="0,10,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Grid.ColumnSpan="2" 
                                                        BorderBrush="#E0E0E0" 
                                                        BorderThickness="0,1,0,0" 
                                                        Margin="0,0,0,10"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                                          Text="Cost produse:"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,15,5"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                                          Text="{Binding ItemsCostFormatted}"
                                                          Margin="0,0,0,5"/>

                                                <!-- Folosim Style.Triggers pentru a controla vizibilitatea -->
                                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                                          Text="Reducere:"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,15,10">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                                          Text="{Binding DiscountFormatted}"
                                                          Foreground="#D32F2F"
                                                          Margin="0,0,0,10">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                                          Text="Total de plată:"
                                                          FontWeight="SemiBold"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,15,0"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                                          Text="{Binding TotalCostFormatted}"
                                                          FontWeight="SemiBold"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Indicator de încărcare -->
                <Grid Grid.Row="1">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Rectangle Fill="#80FFFFFF" />
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,10"/>
                        <TextBlock Text="Se încarcă..." HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Mesaj când nu există comenzi -->
                <Grid Grid.Row="1">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasNoOrders}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Nu ai nicio comandă" 
                                  FontSize="16" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Încearcă să faci o comandă nouă" 
                                  Opacity="0.7" 
                                  HorizontalAlignment="Center"/>
                        <Button Content="Comandă nouă" 
                                Command="{Binding NewOrderCommand}"
                                Padding="15,8" 
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>