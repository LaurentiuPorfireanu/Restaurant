<UserControl x:Class="Restaurant.UI.Views.Menu.RestaurantMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titlu și informații generale -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Meniul Restaurantului" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Explorează preparatele și meniurile noastre, organizate pe categorii." 
                       FontSize="14" 
                       Opacity="0.7"/>
        </StackPanel>

        <!-- Conținutul meniului cu categorii -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Name}" 
                                  Margin="0,0,0,10" 
                                  IsExpanded="False">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Preparate în categorie -->
                                <StackPanel Grid.Row="0">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasPreparate}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="Preparate" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding Preparate}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0" 
                                                        BorderThickness="0,0,0,1" 
                                                        Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Imagine preparat (prima imagine din galerie) -->
                                                        <Border Grid.Column="0" Width="80" Height="60" 
                                                                BorderBrush="#E0E0E0" BorderThickness="1" 
                                                                Margin="0,0,10,0">
                                                            <Image Source="{Binding FirstImagePath}" 
                                                                   Stretch="UniformToFill"/>
                                                        </Border>

                                                        <!-- Informații preparat -->
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontWeight="SemiBold" 
                                                                       TextTrimming="CharacterEllipsis"/>

                                                            <!-- Alergeni -->
                                                            <TextBlock Text="{Binding AlergenInfo}" 
                                                                       FontSize="12" 
                                                                       Opacity="0.7" 
                                                                       TextWrapping="Wrap" 
                                                                       Margin="0,3,0,0"/>

                                                            <!-- Badge pentru indisponibilitate -->
                                                            <Border Background="#FFE0E0" 
                                                                    Padding="5,2" 
                                                                    CornerRadius="3" 
                                                                    HorizontalAlignment="Left"
                                                                    Margin="0,5,0,0">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="Indisponibil" 
                                                                           Foreground="#D32F2F" 
                                                                           FontSize="11"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <!-- Cantitate și preț -->
                                                        <TextBlock Grid.Column="2" 
                                                                   Text="{Binding QuantityInfo}" 
                                                                   VerticalAlignment="Center" 
                                                                   Margin="10,0"/>

                                                        <TextBlock Grid.Column="3" 
                                                                   Text="{Binding PriceFormatted}" 
                                                                   FontWeight="SemiBold" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Meniuri în categorie -->
                                <StackPanel Grid.Row="1" 
                                            Margin="0,15,0,0">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasMenus}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="Meniuri" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding Menus}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0" 
                                                        BorderThickness="0,0,0,1" 
                                                        Padding="0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Nume meniu și disponibilitate -->
                                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontWeight="SemiBold"/>
                                                            <!-- Badge pentru indisponibilitate -->
                                                            <Border Background="#FFE0E0" 
                                                                    Padding="5,2" 
                                                                    CornerRadius="3" 
                                                                    Margin="10,0,0,0">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="Indisponibil" 
                                                                           Foreground="#D32F2F" 
                                                                           FontSize="11"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <!-- Preț meniu -->
                                                        <TextBlock Grid.Column="1" Grid.Row="0" 
                                                                   Text="{Binding PriceFormatted}" 
                                                                   FontWeight="SemiBold"/>

                                                        <!-- Conținut meniu -->
                                                        <ItemsControl Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                                                      ItemsSource="{Binding MenuPreparate}" 
                                                                      Margin="15,5,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock>
                                                                        <Run Text="• "/>
                                                                        <Run Text="{Binding Name}"/>
                                                                        <Run Text=" - "/>
                                                                        <Run Text="{Binding Quantity}"/>
                                                                    </TextBlock>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Indicator de încărcare -->
        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Rectangle Fill="#80FFFFFF" />
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,10"/>
                <TextBlock Text="Se încarcă meniul..." HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>




</UserControl>